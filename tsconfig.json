{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES6",
		"jsx": "react",
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"allowSyntheticDefaultImports": true,
		"noUncheckedIndexedAccess": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "build/",
		"rootDir": "src/"
	},
	"exclude": ["node_modules", "**/node_modules/*"]
}
